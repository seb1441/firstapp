    <div class="col-10">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="field form-group row">
    <div class="col-2 col-form-label"><%= f.label :image_url %></div>
    <div class="col-10">
      <%= f.text_area :image_url %>
    </div>
  </div>

  <div class="field form-group row">
    <div class="col-2 col-form-label"><%= f.label :colour %></div>
    <div class="col-10">
      <%= f.text_area :colour %>
    </div>
  </div>

  <div class="field form-group row">
    <div class="col-2 col-form-label"><%= f.label :price %></div>
    <div class="col-10">
      <%= f.text_area :price %>
