<div class="container">
  <h1 class="text-center display-4">Featured Product</h1>
  <br>
  <div class="card mx-auto" style="width: 300px;">
    <img class="card-img-top" src="<%= @featured_product.image_url %>" alt="Card image cap">
    <div class="card-block">
      <h4 class="card-title"><%= @featured_product.name %></h4>
      <p class="card-text"><%= @featured_product.description %></p>
      <br>
      <p class="card-text"><strong>Color: </strong><%= @featured_product.colour %></p>
      <p class="card-text"><strong>Price: </strong><%= @featured_product.price %>$</p>
      <br>
      <p class="card-text"><small class="text-muted">Last updated <%= time_ago_in_words(@featured_product.updated_at) %> ago</small></p>
    </div>
  </div>
</div>
